.blogroll{padding:1em 0;border:2px solid transparent;border-bottom:1px dashed var(--color-contrast-low);display:flex;transition:all .5s}.blogroll .friend{text-decoration:none;text-overflow:ellipsis;overflow:hidden;white-space:nowrap}.blogroll .name{font-weight:700;margin:.375em 0}.blogroll .excerpt{font-size:.875em;text-overflow:ellipsis;overflow:hidden;white-space:nowrap}.blogroll .avatar{width:4em!important;height:4em!important;margin:0 1em 0 0!important;z-index:0}